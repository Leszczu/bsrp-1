<script>
jQuery(function($) //wczytujemy główny kod JavaScript do DOM przez JQuery i noConflict()
{
$('.skins').click(function() // sprawdzamy czy jakikolwiek skin został kliknięty, odpowiednik callbacków z PAWN
{
$('.skins').animate({opacity: 1 }, 500); //Odnosimy się do klasy "skins", a następnie wszystkie obrazki z tej klasy zmieniamy na widoczność 100%
$(this).animate({opacity: 0.67 }, 500); // Odnosimy się bezpośrednio do elementu klikniętego i zmieniamy jego widoczność na 67%
var wybranyskin = parseInt($(this).attr('id').split("-", 3)); //Sprawdzamy wartość klikniętego id, następnie tniemy go na 2 części, gdzie nasza część wychodzi jako 0
$('#skin').val('value', wybranyskin[1]); //robimy, aby wartość formularza miała wartość skina, czyli tego co wcześniej oznaczyliśmy jako sid-{id skinu}.
}); // zamykamy callbacka
}); // zamykamy jQuery
</script>

