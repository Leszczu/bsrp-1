%html

  %head
    %title
      = yield(:title) || "Untitled"
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag "application"
    =# javascript_include_tag :defaults
    =# auto_discovery_link_tag :rss, news_rss_url
    = stylesheet_link_tag "application"
    = javascript_include_tag :defaults

  %body
    #top_container
      #top
        =render :partial => "layouts/home/header"
      #content_container
        #content_left
          -if flash[:notice]
            .successbox= flash[:notice]
            %br
          -elsif flash[:error]
            .errorbox= flash[:error]
            %br
          = yield
        #side_menu
          =render :partial => "layouts/home/side"
        %br.clearfloat
        %br

